<listbox id="paramlb" rows="10" mold="paging" pageSize="10"
		model="@{mainCtrl.listeParam}"
		selectedItem="@{mainCtrl.paramCourant}" >
		 <custom-attributes org.zkoss.zul.listbox.autoSort="true"/>
		<listhead>
			<listheader label="Nom" sortDirection="ascending" sort="auto(nom)"/>
			<listheader label="Actif" sort="auto"/>
		</listhead>
		<listitem self="@{each=param}">
			<listcell label="@{param.nom}" />
			<listcell label="@{param.actif, converter='nc.mairie.siale.technique.BooleanTypeConverter'}" />
		</listitem>
	</listbox>
	<grid>
		<columns sizable="true">
			<column width="100px"/>
			<column/>
		</columns>
		<rows>
				<row>
				Nom : <textbox id="paramtb" constraint="no empty" value="@{mainCtrl.paramCourant.nom,save-when=none}" cols="50" />
			</row>
				<row>
				Actif : <checkbox id="paramActicCheckBox" checked="@{mainCtrl.paramCourant.actif,save-when=none}"/>  
				
			</row>
		</rows>
	</grid>

	<hbox pack="center" width="100%">
		<div>
			<button id="add" label="Add" />
			<button id="update" label="Update" />
			<button id="delete" label="Delete" />
		</div>
	</hbox>
	
 
